---
const { color, title, subtitle, id } = Astro.props
const textColor = `text-${color}`
---

<section class="bg-black h-screen w-screen text-center relative overflow-hidden landing-section" data-header-color={color} id={id} >
  <div class="relative z-20 h-full flex flex-col">
    <header>
      <h2 class={`${textColor} pt-40 text-[40px] font-medium`}>{title}</h2> 
      <p class={`${textColor} text-sm`}>{subtitle}</p>
    </header>

    <footer class="flex flex-grow flex-nowrap flex-col justify-end pb-20">
      <slot name="footer" />
    </footer>
  </div>

  <div class="absolute top-0 bottom-0 z-10 w-full">
    <slot name="background" />
  </div>
</section>

